<%- include('../include/header') %>

  <div class="container mt-4">
    <div class="row mb-3">
      <div class="col">
        <h1>All Villages</h1>
      </div>
      <div class="col-auto">
        <a href="/villages/create" class="btn btn-primary">Create New Village</a>
      </div>
    </div>

    <div class="card">
      <ul class="list-group list-group-flush">
        <% villages.forEach(village=> { %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div>
              <strong>
                <%= village.name %>
              </strong>
              - <span class="badge bg-primary">
                <%= village.price %>
              </span>
              <br />
              <strong>City:</strong>
              <%= village.City.name %>
            </div>
            <div class="d-flex">
              <form action="/villages/<%= village.id %>/update" method="post">
                <input type="hidden" name="status" value="<%= village.status === 'active' ? 'inactive' : 'active' %>">
                <button type="submit" class="badge <%= village.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                  <%= village.status.toUpperCase() %>
                </button>
              </form>
              <a href="/villages/<%= village.id %>/edit" class="btn btn-sm btn-outline-secondary ms-2" style="margin: 0 1rem;">Edit</a>
            </div>
          </li>
          <% }) %>
      </ul>
    </div>
  </div>

  <%- include('../include/footer') %>