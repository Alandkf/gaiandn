<%- include('../include/header') %>

    <div class="container mt-4 text-right" dir="rtl">
        <h1>دەستکاری شارۆچەکە</h1>
        <form action="/villages/<%= village.id %>/update?_method=PATCH" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">ناو:</label>
                    <input type="text" id="name" name="name" value="<%= village.name %>" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="status">حالەت:</label>
                    <select id="status" name="status" class="form-control">
                        <option value="active" <%=village.status==='active' ? 'selected' : '' %>>چالاک</option>
                        <option value="inactive" <%=village.status==='inactive' ? 'selected' : '' %>>ناچالاک</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="price">نرخ:</label>
                    <input type="number" id="price" name="price" value="<%= village.price %>" class="form-control"
                        required>
                </div>
                <div class="form-group col-md-6">
                    <label for="cityId">شار:</label>
                    <select id="cityId" name="cityId" class="form-control">
                        <% cities.forEach(city=> { %>
                            <option value="<%= city.id %>" <%=city.id===village.cityId ? 'selected' : '' %>><%=
                                    city.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"
                style="background-color: #ab15d4; border: 0px solid;">نوێکردنەوە</button>
            <a href="/villages" class="btn btn-secondary">گەڕانەوە بۆ لیست</a>
        </form>
    </div>

    <%- include('../include/footer') %>