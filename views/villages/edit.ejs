<%- include('../include/header') %>

    <div class="container mt-4">
        <h1>Edit Village</h1>
        <form action="/villages/<%= village.id %>" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= village.name %>" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="status">Status:</label>
                <select id="status" name="status" class="form-control">
                    <option value="active" <%=village.status==='active' ? 'selected' : '' %>>Active</option>
                    <option value="inactive" <%=village.status==='inactive' ? 'selected' : '' %>>Inactive</option>
                </select>
            </div>
            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" id="price" name="price" value="<%= village.price %>" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="cityId">City:</label>
                <select id="cityId" name="cityId" class="form-control">
                    <% cities.forEach(city=> { %>
                        <option value="<%= city.id %>" <%=city.id===village.cityId ? 'selected' : '' %>><%= city.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
        <a href="/villages" class="mt-2 btn btn-secondary">Back to List</a>
    </div>

    <%- include('../include/footer') %>