<%- include('../include/header') %>

    <div class="container mt-4">
        <div class="row mb-3">
            <div class="col">
                <h1>All Sections</h1>
            </div>
            <div class="col-auto">
                <a href="/sections/create" class="btn btn-primary">Create New Section</a>
            </div>
        </div>

        <div class="card">
            <ul class="list-group list-group-flush">
                <% sections.forEach(section=> { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>
                                <%= section.name %>
                            </strong> - <%= section.note %>
                        </div>
                        <div class="d-flex">
                            <form action="/sections/<%= section.id %>/update" method="post">
                                <input type="hidden" name="status" value="<%= section.status === 'active' ? 'inactive' : 'active' %>">
                                <button type="submit" class="badge <%= section.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                    <%= section.status.toUpperCase() %>
                                </button>
                            </form>

                            <a href="/sections/<%= section.id %>/edit"
                                class="btn btn-sm btn-outline-secondary ms-2" style="margin-left: 1rem;">Edit</a>
                        </div>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>

    <%- include('../include/footer') %>