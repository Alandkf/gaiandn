<%- include('../include/header') %>

    <div class="container mt-4">
        <h1>Section Details</h1>
        <div class="card">
            <div class="card-body">
                <p><strong>Name:</strong>
                    <%= section.name %>
                </p>
                <p><strong>Note:</strong>
                    <%= section.note %>
                </p>
                <p><strong>Status:</strong>
                    <%= section.status %>
                </p>
                <p><strong>Created At:</strong>
                    <%= section.createdAt %>
                </p>
                <p><strong>Updated At:</strong>
                    <%= section.updatedAt %>
                </p>
            </div>
            <div class="card-footer">
                <a href="/sections/<%= section.id %>/edit" class="btn btn-primary">Edit</a>
                <a href="/sections" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <%- include('../include/footer') %>