<%- include('../include/header') %>

    <div class="container mt-4 text-right" dir="rtl">
        <h1>دەستکاری کردنی شار</h1>
        <form action="/cities/<%= city.id %>/update?_method=PATCH" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">ناو:</label>
                    <input type="text" id="name" name="name" value="<%= city.name %>" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="status">دۆخ:</label>
                    <select id="status" name="status" class="form-control">
                        <option value="active" <%=city.status==='active' ? 'selected' : '' %>>چالاک</option>
                        <option value="inactive" <%=city.status==='inactive' ? 'selected' : '' %>>ناچالاک</option>
                    </select>
                </div>
            </div>
            <div class="form-group text-right">
                <label for="price">نرخ:</label>
                <input type="number" id="price" name="price" value="<%= city.price %>" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary"
                style="background-color: #ab15d4; border: 0px solid;">نوێکردنەوە</button>
            <a href="/cities" class="btn btn-secondary">بگەڕێوە بۆ لیست</a>
        </form>
    </div>

    <%- include('../include/footer') %>