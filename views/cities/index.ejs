<%- include('../include/header') %>

    <div class="container mt-4 text-right" >
        <div class="row mb-3">
            <div class="col">
                <h1>هەموو شارەکان</h1>
            </div>
            <div class="col-auto">
                <a href="/cities/create" class="btn btn-primary">زیادکردنی شار </a>
            </div>
        </div>

        <div class="card">
            <ul class="list-group list-group-flush">
                <% cities.forEach(city=> { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>
                                <%= city.name %> - <%= city.price %>
                            </strong>
                        </div>
                        <div class="d-flex" >
                            <form action="/cities/<%= city.id %>/update" method="post">
                                <input type="hidden" name="status"
                                    value="<%= city.status === 'active' ? 'inactive' : 'active' %>">
                                <button type="submit"
                                    class="badge <%= city.status === 'active' ? 'bg-success' : 'bg-danger' %>">
                                    <%= city.status=="active"?"چالاک":"ناچالاک" %>
                                </button>
                            </form>
                            <a href="/cities/<%= city.id %>/edit" style="margin: 0 1rem;"
                                class="btn btn-sm btn-outline-secondary ms-2" >دەستکاری</a>
                            <a href="/cities/<%= city.id %>/show" class="btn btn-sm btn-secondary ms-2">وەردەکاری</a>
                        </div>
                    </li>
                    <% }) %>
            </ul>
        </div>
    </div>

    <%- include('../include/footer') %>