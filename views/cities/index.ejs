<%- include('../include/header') %>

    <div class="container mt-4">
        <h1>All Cities</h1>
        <ul class="list-group">
            <% cities.forEach(city=> { %>
                <li class="list-group-item">
                    <%= city.name %> -
                        <a href="/cities/<%= city.id %>/edit" class="btn btn-sm btn-primary">Edit</a> -
                        <a href="/cities/<%= city.id %>" class="btn btn-sm btn-secondary">View Details</a>
                </li>
                <% }) %>
        </ul>
    </div>

    <%- include('../include/footer') %>