<%- include('../include/header') %>

    <div class="container mt-4 text-right" dir="rtl">
        <h1>زیادکردنی شۆفێر</h1>
        <form action="/drivers/store" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="name">ناو</label>
                    <input type="text" id="name" name="name" class="form-control" placeholder="ناوی شۆفێر" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="phoneNumber">ژمارەی مۆبایل:</label>
                    <input type="text" id="phoneNumber" name="phoneNumber" class="form-control"
                        placeholder="ژمارەی مۆبایل" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="vehicleType">جۆری پێڕەو:</label>
                    <select id="vehicleType" name="vehicleType" class="form-control">
                        <option value="motor">ماتۆڕ</option>
                        <option value="car">ئۆتۆمبێل</option>
                        <option value="truck">بارهەڵگر</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="vehicleId">ژمارەی پێڕەو:</label>
                    <input type="text" id="vehicleId" name="vehicleId" class="form-control"
                        placeholder="ژمارەی ئۆتۆمبێل، ماتۆڕ، بارهەڵگر" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="cityId">شار:</label>
                    <select id="cityId" name="cityId" class="form-control">
                        <% cities.forEach(city=> { %>
                            <option value="<%= city.id %>">
                                <%= city.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="password">وشەی تێپەڕ:</label>
                    <input type="password" id="password" name="password" class="form-control" placeholder="وشەی تێپەڕ"
                        required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="status">دۆخ:</label>
                    <select id="status" name="status" class="form-control">
                        <option value="active">چالاک</option>
                        <option value="inactive">ناچالاک</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="address">ناونیشان:</label>
                    <input type="text" id="address" name="address" class="form-control"
                        placeholder="شار، ناوچە، شوێنێکی نزیک لێوەی" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="price">نرخ:</label>
                    <input type="number" id="price" name="price" class="form-control" placeholder="نرخ" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary"
                style="background-color: #ab15d4; border: 0px solid;">زیادکردن</button>
            <a href="/drivers" class="btn btn-secondary">گەڕانەوە</a>
        </form>
    </div>

    <%- include('../include/footer') %>