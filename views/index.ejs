<%- include('include/header') %>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <!-- Sections Box -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm" id="sectionBox" onclick="window.location.href='/sections'">
                    <div class="card-body">
                        <h5 class="card-title">ژمارەی لقەکان</h5>
                        <p class="card-text display-4">
                            <%= toKurdishNumbers(sections.length) %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Employees Box -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm" id="employeeBox" onclick="window.location.href='/employees'">
                    <div class="card-body">
                        <h5 class="card-title">ژمارەی کارمەندەکان</h5>
                        <p class="card-text display-4">
                            <%= toKurdishNumbers(employees.length) %>
                        </p>
                        <p class="card-text">بەڕێوەبەران: <%= toKurdishNumbers(managersCount) %>
                        </p>
                        <p class="card-text">کارمەندەکان: <%= toKurdishNumbers(employeesCount) %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Cities Box -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm" id="cityBox" onclick="window.location.href='/cities'">
                    <div class="card-body">
                        <h5 class="card-title">ژمارەی شارەکان</h5>
                        <p class="card-text display-4">
                            <%= toKurdishNumbers(cities.length) %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Villages Box -->
            <div class="col-md-4 mb-4">
                <div class="card text-center shadow-sm" id="villageBox" onclick="window.location.href='/villages'">
                    <div class="card-body">
                        <h5 class="card-title">ژمارەی شارۆچکەکان</h5>
                        <p class="card-text display-4">
                            <%= toKurdishNumbers(villages.length) %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Drivers Box -->
            <div class="col-md-8 mb-4">
                <div class="card text-center shadow-sm" id="driverBox" onclick="window.location.href='/drivers'">
                    <div class="card-body">
                        <h5 class="card-title">ژمارەی شۆفێران</h5>
                        <p class="card-text display-4">
                            <%= toKurdishNumbers(drivers.length) %>
                        </p>
                        <p class="card-text">شۆفێرانی ماتۆڕ: <%= toKurdishNumbers(motorDriversCount) %>
                        </p>
                        <p class="card-text">شۆفێرانی ئۆتۆمبێل: <%= toKurdishNumbers(carDriversCount) %>
                        </p>
                        <p class="card-text">شۆفێرانی بارهەڵگر: <%= toKurdishNumbers(truckDriversCount) %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        .card {
            cursor: pointer;
            transition: transform 0.3s, background-color 0.3s;
            border-radius: 10px;
        }

        .card:hover {
            transform: scale(1.05);
            background-color: #e9ecef;
        }

        .card-title {
            font-weight: bold;
            color: #343a40;
            margin-bottom: 1rem;
        }

        .card-text.display-4 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007bff;
        }

        .card-text {
            color: #6c757d;
            margin-bottom: 0.5rem;
        }
    </style>

    <%- include('include/footer') %>