    <style>
        .sidebar {
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            /* background-color: #7a8a95; */
            /* background-color: #D8C3A5; */
            background-color: #8E8D8A;
            padding: 20px;
            height: 100vh;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            transition: width 0.3s;
            z-index: 1000;
            width: 15%;
        }

        .sidebar.collapsed {
            width: 80px;
            padding: 10px;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            /* color: #E98074; */
            color: #EAE7DC;
            padding: 10px;
            text-decoration: none;
            font-size: 1.25rem;
            white-space: nowrap;
        }

        .sidebar a i {
            margin-left: 1rem;
            /* Add space between icon and text */
        }

        .sidebar a:hover {
            background-color: #EAE7DC;
            color: #101820;
        }

        .sidebar.collapsed a {
            justify-content: center;
            padding: 10px 0;
            font-size: 0;
        }

        .sidebar.collapsed a i {
            font-size: 1.5rem;
            margin-left: 0;
            /* Remove margin when collapsed */
        }

        .sidebar.collapsed #logo {
            display: none;
        }

        .toggle-btn {
            background-color: transparent;
            border: none;
            color: #ffffff;
            font-size: 1.5rem;
            cursor: pointer;
            margin-bottom: 10px;
        }

        .toggle-btn:focus {
            outline: none;
        }

        main {
            margin-right: 240px;
            transition: margin-right 0.3s;
        }

        .sidebar.collapsed+main {
            margin-right: 100px;
        }
    </style>
</head>

